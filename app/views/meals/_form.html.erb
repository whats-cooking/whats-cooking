<%= simple_form_for @meal, multipart: true, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Make it inviting!", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area :description, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :time, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.datetime_local_field :time, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :price, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :price, class: "form-control", type: "number", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.file_field :image %>
      </div>
    </div>
    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
